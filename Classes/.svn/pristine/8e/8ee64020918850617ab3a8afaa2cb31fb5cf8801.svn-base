@interface RegisterDetailController : UIViewController <UITableViewDelegate, UITableViewDataSource> {
	IBOutlet UITableView *myTableView;
	
	// Internal variables
	TransactionDetail *transDetail;
	
	NSString *clientName;
	NSInteger tNum;
	NSNumber *subTotal;
	NSNumber *salesTax;
	NSNumber *totalDue;
	NSNumber *tip;
	NSNumber *totalBalance;
	NSNumber *amountPaid;
	NSNumber *change;
