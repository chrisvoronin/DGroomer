#import "ReportViewController.h"
#import "GCReportViewController.h"
#import "DailyCloseoutController.h"
#import "ShowCloseoutController.h"
#import "TransHistoryController.h"

@implementation ReportViewController

@synthesize myTableView, appDelegate;

- (IBAction)back:(id)sender {
	[self.view removeFromSuperview];
}

- (void)viewWillAppear:(BOOL)animated
{	
	NSIndexPath *tableSelection = [myTableView indexPathForSelectedRow];
	[myTableView deselectRowAtIndexPath:tableSelection animated:NO];
	[myTableView reloadData];
	
}

// Implement viewDidLoad to do additional setup after loading the view, typically from a nib.
- (void)viewDidLoad {
	
	// Use the delegate to set/get values
	appDelegate = (PSAAppDelegate *)[[UIApplication sharedApplication] delegate];
			
	// Set the background color to an image
	self.view.backgroundColor = [UIColor colorWithPatternImage:[UIImage imageNamed:@"PSA_Productpurple.png"]];
	self.myTableView.backgroundColor = [UIColor clearColor];
	
	[super viewDidLoad];

}


- (void)didReceiveMemoryWarning {
	// Releases the view if it doesn't have a superview.
    [super didReceiveMemoryWarning];
	
	// Release any cached data, images, etc that aren't in use.
}

- (void)viewDidUnload {
	// Release any retained subviews of the main view.
	// e.g. self.myOutlet = nil;
}


- (void)dealloc {
	[myTableView release];
	
    [super dealloc];
}

#pragma mark TableViewDelegate

- (UITableViewCell *)tableView:(UITableView *)aTableView cellForRowAtIndexPath:(NSIndexPath *)indexPath {
    UITableViewCell *cell = [myTableView dequeueReusableCellWithIdentifier:@"TypeCell"];
    if (cell == nil) {
        cell = [[[UITableViewCell alloc] initWithFrame:CGRectZero reuseIdentifier:@"TypeCell"] autorelease];
    }
	
	cell.textLabel.font = [UIFont italicSystemFontOfSize:16];
	cell.accessoryType = UITableViewCellAccessoryDisclosureIndicator;
	
	
	switch (indexPath.row) {
		case 0:
			cell.textLabel.text = [NSString stringWithFormat:@"Closeout History"];
			break;
		case 1:
			cell.textLabel.text = [NSString stringWithFormat:@"Daily Closeout"];
			break;
		case 2:
			cell.textLabel.text =[NSString stringWithFormat: @"Gift Certificate List"];
			break;
		case 3:
			cell.textLabel.text = [NSString stringWithFormat:@"Transaction History"];
			break;
#ifdef RELEASE_2.1
		case 4:
			cell.textLabel.text = [NSString stringWithFormat:@"Formula History Report"];
			break;
		case 5:
			cell.textLabel.text = [NSString stringWithFormat:@"Appointment Reminder Report"];
			break;
		case 6:
			cell.textLabel.text = [NSString stringWithFormat:@"Services Report"];
			break;
		case 7:
			cell.textLabel.text = [NSString stringWithFormat:@"Retail Sales Report"];
			break;
		case 8:
			cell.textLabel.text = [NSString stringWithFormat:@"TIP Report"];
			break;
		case 9:
			cell.textLabel.text = [NSString stringWithFormat:@"Sales by Transaction Report"];
			break;
		case 10:
			cell.textLabel.text = [NSString stringWithFormat:@"Inventory Report"];
			break;
#endif
	}
	
	return cell;
}

// The table has one row for each possible type.
- (NSInteger)tableView:(UITableView *)aTableView numberOfRowsInSection:(NSInteger)section {
	return 4;
}

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{		
	// don't keep the table selection
	[tableView deselectRowAtIndexPath:indexPath animated:YES];
		
	switch (indexPath.row) {
		case 0: {
			ShowCloseoutController *shView = [[ShowCloseoutController alloc] initWithNibName:@"ShowCloseouts" bundle:[NSBundle mainBundle]];
			[self.view addSubview:shView.view];
			}
			//[appDelegate loadCloseoutHistory];
			break;
		case 1: {
			DailyCloseoutController *dcView = [[DailyCloseoutController alloc] initWithNibName:@"DailyCloseoutView" bundle:[NSBundle mainBundle]];
			[self.view addSubview:dcView.view];
			}
			break;
		case 2: {
			//open the display report screen
			GCReportViewController *gcView = [[GCReportViewController alloc] initWithNibName:@"GCReportView" bundle:[NSBundle mainBundle]];
			[self.view addSubview:gcView.view];
			}
			break;
		case 3: {
			TransHistoryController *trView = [[TransHistoryController alloc] initWithNibName:@"TransactionHistory" bundle:[NSBundle mainBundle]];
			[self.view addSubview:trView.view];
			}
			break;
#ifdef RELEASE_2.1
		case 4:
			[appDelegate loadFormulaHistory];
			break;
		case 5:
			[appDelegate loadAppointmentReminder];
			break;
		case 6:
			[appDelegate loadServiceSales];
			break;
		case 7:
			[appDelegate loadRetailSales];
			break;
		case 8:
			[appDelegate loadTIP];
			break;
		case 9:
			[appDelegate loadSalesByTransaction];
			break;
		case 10:
			[appDelegate loadInventory];
			break;
#endif
	}
	
	//open the display report screen
	//DisplayReportController *dispControl = [[DisplayReportController alloc] initWithNibName:@"SecondView" bundle:nil];
	//[self.view addSubview:dispControl.view];
	
}

@end
