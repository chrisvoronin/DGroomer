#import <UIKit/UIKit.h>
#import "PSAAppDelegate.h"
#import "AddVendorContactController.h"

@interface VendorViewController : UIViewController<UITableViewDelegate, UITableViewDataSource, UISearchBarDelegate> {
	IBOutlet UITableView	*myTableView;
	IBOutlet UISearchBar	*mySearchBar;
	
	NSArray					*listContent;			// the master content
	NSMutableArray			*groupListContent;	// the filtered content as a result of the search
	NSMutableArray			*savedContent;			// the saved content in case the user cancels a search
		
	AddVendorContactController *addVendorController;
	// Need a controller reference for later use
	ProductsInformationController *productsController;
	
	// Use the appDelegate for setting and getting values
	PSAAppDelegate *appDelegate;
}

@property (nonatomic, retain) UITableView *myTableView;
@property (nonatomic, retain) UISearchBar *mySearchBar;
@property (nonatomic, retain) PSAAppDelegate *appDelegate;
@property (nonatomic, retain) NSArray *listContent;
@property (nonatomic, retain) NSMutableArray *groupListContent;
@property (nonatomic, retain) NSMutableArray *savedContent;
@property (nonatomic, retain) AddVendorContactController *addVendorController;
@property (nonatomic, retain) ProductsInformationController *productsController;

- (IBAction)addVendor:(id)sender;
- (IBAction)cancel:(id)sender;

@end
