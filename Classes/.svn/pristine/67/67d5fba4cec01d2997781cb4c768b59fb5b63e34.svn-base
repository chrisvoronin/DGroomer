- (IBAction)save:(id)sender {
	[appDelegate loadMaster];
	MasterColorLine *master;
	
	master = [appDelegate.masterLine objectAtIndex:1];
	appDelegate.colorLineName = master.colorLineName;
	if ([switch1 isOn]) {
		appDelegate.activeLine = 1;
	} else
		appDelegate.activeLine = 0;
	[appDelegate updateMaster:1];
	
	master = [appDelegate.masterLine objectAtIndex:2];
